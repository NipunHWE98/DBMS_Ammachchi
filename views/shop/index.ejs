<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <% if( role==="Admin"){%> <%- include('../includes/admin-navigation.ejs') %><% } 
         else if(role==="Cashier") { %>
            <%- include('../includes/cashier-navigation.ejs') %>
            <% }  else if(role==="Customer") { %>
                <%- include('../includes/customer-navigation.ejs') %>
                <% }else if(role==="Chef") { %>
                    <%- include('../includes/chef-navigation.ejs') %>
                    <% }
                 else  { %>
                    <%- include('../includes/navigation.ejs') %>
                    <% } %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { if(product.Availability===1){%>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.Name %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.Image %>"
                                alt="<%= product.Name %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">RS<%= product.Price %></h2>
                            <p class="product__description"><%= product.Discription %></p>
                        </div>
                        <div class="card__actions">
                                <a href="/products/<%= product.ID %>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                        </div>
                    </article>
                    <% } 
                 } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>